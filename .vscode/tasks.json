{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"args": ["run"],
	"tasks": [
		{
			"taskName": "prepare:client",
			"isBuildCommand": true,
			"isWatching": true
		},
		{
			"taskName": "prepare:server"
		},
		{
			"taskName": "lint",
			"problemMatcher": ["$eslint-compact", "$eslint-stylish"]
		}
	]
}